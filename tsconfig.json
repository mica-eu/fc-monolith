{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "typings"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
